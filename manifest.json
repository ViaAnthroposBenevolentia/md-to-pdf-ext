{
  "manifest_version": 2,
  "name": "Markdown to PDF Converter",
  "version": "1.0",
  "description": "Convert Markdown files to PDF directly in your browser.",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ]
}
